style "taffybar-default" {
  color["black"] = "#000000"
  color["white"] = "#ffffff"
  color["green"] = "#00ff00"
  color["red"]   = "#ff0000"

  bg[NORMAL]   = "#1c1f26"
  fg[NORMAL]   = @white
  text[NORMAL] = @white
  fg[PRELIGHT] = @green
  bg[PRELIGHT] = @black
}

widget "Taffybar*" style "taffybar-default"
widget "*NotificationCloseButton" style "notification-button"
